<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Your Career Matches"
            android:textColor="@color/text_white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Based on your selected skills"
            android:textAlignment="center"
            android:textColor="@color/cyan_light"
            android:textSize="14sp"
            android:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <!-- Top Career Card (1st Place) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/career1Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_glass_card"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/bg_glass_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥‡ Top Match"
                    android:textColor="@color/cyan"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/tvCareer1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Career Name"
                    android:textColor="@color/deep_blue"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/tvCareer1Match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="95% Match"
                    android:textColor="@color/cyan"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins" />

                <ProgressBar
                    android:id="@+id/progressCareer1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="12dp"
                    android:progressTint="@color/cyan"
                    android:max="100"
                    android:progress="95" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 2nd Career Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/career2Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_glass_card"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/career1Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/bg_glass_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥ˆ 2nd Match"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/tvCareer2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Career Name"
                    android:textColor="@color/deep_blue"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/tvCareer2Match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="85% Match"
                    android:textColor="@color/deep_blue"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins" />

                <ProgressBar
                    android:id="@+id/progressCareer2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="8dp"
                    android:progressTint="@color/deep_blue"
                    android:max="100"
                    android:progress="85" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 3rd Career Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/career3Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_glass_card"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/career2Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/bg_glass_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥‰ 3rd Match"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/tvCareer3Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Career Name"
                    android:textColor="@color/deep_blue"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/tvCareer3Match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="75% Match"
                    android:textColor="@color/deep_blue"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins" />

                <ProgressBar
                    android:id="@+id/progressCareer3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="8dp"
                    android:progressTint="@color/deep_blue"
                    android:max="100"
                    android:progress="75" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <Button
            android:id="@+id/btnSaveHistory"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_button_gradient"
            android:text="ðŸ’¾ Save to History"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/career3Card" />

        <Button
            android:id="@+id/btnAiAnalysis"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rounded_input"
            android:text="ðŸ¤– AI Analysis (Gemini)"
            android:textColor="@color/deep_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnSaveHistory" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
