<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".activities.ResumeBuilderActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:text="AI Resume Builder"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Details"
                android:textColor="@color/deep_blue"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_rounded_input"
                android:hint="Full Name"
                android:paddingStart="16dp"
                android:inputType="textPersonName"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_rounded_input"
                android:hint="Email Address"
                android:paddingStart="16dp"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_rounded_input"
                android:hint="Phone Number"
                android:paddingStart="16dp"
                android:inputType="phone"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professional Details"
                android:textColor="@color/deep_blue"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etEducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/bg_rounded_input"
                android:hint="Education (e.g. BS CS, University X)"
                android:gravity="top|start"
                android:padding="16dp"
                android:inputType="textMultiLine"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etSkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/bg_rounded_input"
                android:hint="Skills (comma separated)"
                android:gravity="top|start"
                android:padding="16dp"
                android:inputType="textMultiLine"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:background="@drawable/bg_rounded_input"
                android:hint="Work Experience"
                android:gravity="top|start"
                android:padding="16dp"
                android:inputType="textMultiLine"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnAiSummary"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_button_gradient"
                android:backgroundTint="@color/cyan"
                android:text="âœ¨ Generate AI Summary"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:layout_marginBottom="12dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/bg_rounded_input"
                android:hint="Professional Summary (Generate with AI or type manually)"
                android:gravity="top|start"
                android:padding="16dp"
                android:inputType="textMultiLine"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnGeneratePdf"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_button_gradient"
                android:text="Generate PDF Resume"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
