<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Midnight Obsidian Theme -->
    <style name="Base.Theme.AIBAsedCareerCounsellingApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/electric_blue</item>
        <item name="colorOnPrimary">@color/midnight_background</item>
        <item name="colorPrimaryContainer">@color/card_surface</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>
        
        <!-- Background color. -->
        <item name="android:colorBackground">@color/midnight_background</item>
        <item name="android:windowBackground">@color/midnight_background</item>
        <item name="colorSurface">@color/card_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/midnight_background</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Font Family -->
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        
        <!-- Ripple Effect -->
        <item name="android:colorControlHighlight">@color/electric_blue</item>
    </style>

    <style name="Theme.AIBAsedCareerCounsellingApp" parent="Base.Theme.AIBAsedCareerCounsellingApp" />
</resources>