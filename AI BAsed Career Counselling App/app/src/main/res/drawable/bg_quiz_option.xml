<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected State (Soft Purple) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#206C63FF" /> <!-- Very Soft Purple Fill -->
            <stroke android:width="2dp" android:color="@color/primary_accent" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Default State (White with Gray Stroke) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/card_surface" />
            <stroke android:width="1dp" android:color="#30000000" /> <!-- Soft Gray Stroke -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
