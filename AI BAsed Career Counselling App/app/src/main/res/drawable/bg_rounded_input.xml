<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- White background for input -->
    <solid android:color="@color/white_background" />
    
    <!-- Rounded corners (20dp as specified) -->
    <corners android:radius="20dp" />
    
    <!-- Border stroke -->
    <stroke
        android:width="1.5dp"
        android:color="@color/cyan_light" />
    
    <!-- Padding -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />
</shape>